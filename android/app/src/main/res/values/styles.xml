<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash screen theme for Android 12+ -->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowSplashScreenBackground">@color/purple_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/zaikabox_logo</item>
        <item name="postSplashScreenTheme">@style/NormalTheme</item>
    </style>

    <!-- Normal theme for the app after splash screen -->
    <style name="NormalTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/purple_bg</item>
    </style>

    <!-- Material Components DayNight theme -->
    <style name="Theme.MaterialComponents.DayNight.NoActionBar" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowBackground">@color/purple_bg</item>
    </style>
</resources>
